<div class="mx-auto  bg-rose-300 relative z-0 px-4 xl:px-0">
  <div class="flex flex-col-reverse md:flex-row py-4 px-6">
      <d  iv class="md:w-3/5 mx-3 md:pt-24 pb-10 lg:py-32 xl:py-48">
          <h1 class="text-3xl lg:text-6xl xl:text-8xl font-black text-gray-900 text-center md:text-left tracking-tighter f-f-i md:w-7/12 leading-tight text-heading-color">{{ section.settings.mh-text }}</h1>
          <h2 class="md:w-8/12 my-4 text-center md:text-left md:my-8 text-gray-700 text-lg lg:text-2xl">{{ section.settings.description }}</h2>
          <div class="w-full flex justify-center md:block">
              <button class="hover:opacity-90 bg-gray-900 py-2 px-10 lg:py-3 lg:px-20 rounded-full text-white text-sm md:text-lg f-f-p focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-white-700">{{ section.settings.button-text }}</button>
          </div>
      </d>
      <div class="w-1/2 sm:w-2/5 h-64 md:h-auto m-auto flex items-center justify-end mx-3 overflow-hidden">
         
          <img class="md:absolute max-w-fit	 md:w-1/3 md:-ml-28" src="{{ section.settings.hero-image.src | image_url }}" alt="error loading image" role="img" />
      </div>
  </div>
</div>


{% schema %}
{
 "name": "Hero Section Settings",
"settings": [
  {
    "type": "image_picker",
    "label" : "Main Hero Image",
    "id": "hero-image"
  },
  {
   "type": "text",
   "label": "Main Heading Text",
    "default": "Body Spray",
    "id" : "mh-text"
  },
  {
   "type": "text",
   "label": "Description",
   "default": "The perfumer is evaluating the creation with a view to capturing the character of the scent, its top, middle and base note.",
   "id": "description"
  },
  {
   "type": "text",
  "default": "Buy Now",
  "id": "button-text",
  "label": "Button-text"
  }
  
]
}
{% endschema %}